<h1> editar producto</h1>

<form action="/api/product/{{product._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">   
     <div class="form-group">
        <label for="_id">ID</label>
        <input type="text" class="form-control"  disabled value="{{product._id}}" name="_id" placeholder="id">
    </div>  
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" value="{{product.name}}" name="name" >
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" value="{{product.price}}" placeholder="Introduce a price" name="price">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" id="category"  name="category" >
            <option selected>{{product.category}}</option>
            <option>Computers</option>
            <option>Phones</option>
            <option>Accesories</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" value="{{product.description}}"  name="description">
    </div>
    <div class="form-group">
        <label for="picture">Picture</label>
        <input type="text" class="form-control" value="{{product.picture}}" name="picture">
    </div>
    <button type="submit" formaction="/api/product/{{product._id}}?_method=PUT" method='POST' class="btn btn-warning">Modificar</button>
     <button type="submit" formaction="/api/product/{{product._id}}?_method=delete" method='POST' class="btn btn-danger">Eliminar</button>
</form>